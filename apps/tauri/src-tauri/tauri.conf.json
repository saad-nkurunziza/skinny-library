{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ishami",
  "version": "0.1.0",
  "identifier": "com.saddy.ishami",
  "build": {
    "beforeBuildCommand": "cd ../web && bun run build && cd ../server && bun run build:tauri",
    "beforeDevCommand": "cd ../server && bun run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "binaries/public"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Ishami",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "externalBin": ["binaries/server"],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
